<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!--对按钮进行圆角化-->
    <corners android:radius="20dp"/>
    <!--设置按钮背景颜色-->
    <solid android:color="#0aa4c7"/>
    <!--stroke是按钮边框的实现，每段虚线的长度，和两段虚线之间的颜色和虚线颜色-->
    <stroke
        android:width="1dp"
        android:dashWidth="12dp"
        android:dashGap="6dp"
        android:color="#000000"/>
</shape>

